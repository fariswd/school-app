<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Subjects</title>
  </head>
  <body>
    <h1>Subjects Data</h1>
    <a href="/students">Students</a> | <a href="/teachers/">Teachers</a> | <a href="/subjects/">Subjects</a><br><br>
    <table border="1">
      <tr>
        <th>Id</th>
        <th>Subject Name</th>
        <th>Teachers</th>
        <th>Action</th>
        <th>Options</th>
      </tr>
      <% subjects.forEach(s=>{ %>
        <tr>
          <td><%= s.id %></td>
          <td><%= s.subject_name %></td>
          <td>
            <ol>
            <% s.teachers.forEach(t=>{ %>
              <li><%= t.getFullName() %></li>
            <% }) %>
            </ol>
          </td>
          <td><a href="/subjects/<%= s.id %>/enrolledstudents">Enrolled Students</a></td>
          <td><a href="/subjects/edit/<%= s.id %>">Edit</a> | <a href="/subjects/delete/<%= s.id %>">Delete</a></td>
        </tr>
      <% }) %>
    </table>
    </br><a href="/subjects/add">add subjects</a>
  </body>
</html>